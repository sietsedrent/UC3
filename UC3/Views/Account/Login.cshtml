@model UC3.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" id="hiddenpw" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="child inline-block-child">
                <input type="checkbox" onclick="HidePassword()">Show Password
            </div>
            <div class="form-group">
                <input type="submit" name="action" value="Send verification" class="btn btn-primary" />
            </div>
        </form>
        <br /> <br /> <br />
        <form asp-action="Login">
            <div class="form-group">
                <label type="text" value="Enter Verification">Enter Verification Code 
            </div>
            <div class="form-group">
                <input type="number" class="form-control" id="vericode" name="vericode" />
            </div>
            <div class="form-group">
                <input type="submit" name="action" value="Log in" class="btn btn-primary" />
            </div>
        </form>

