@model UC3.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" id="hiddenpw" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="child inline-block-child">
                <input type="checkbox" onclick="HidePassword()">Hide Password
            </div>
            <br /> <br /> <br />
            <div class="form-group" >
                <form method="post" action="@Url.Action("SendMail", "AccountController")">
                    <input type="button" value="Send Verificationmail" id="SendMail" class="btn btn-primary" />
                </form>
            </div>
            <input type="number" class="form-control" />
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Nog geen account?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
