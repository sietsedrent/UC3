@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model UC3.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UC3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UC3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WorkoutLogger</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Track">Track</a>
                        </li>

                        <li class="nav-item" >
                            <a class="btn" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>

                        @await Component.InvokeAsync("NToastNotify")



                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
    <div class="container">
        
        <main role="main" class="pb-3">
            <section>
                @{
                    if (HttpContextAccessor.HttpContext.Session.GetString("IsLoggedIn") == "true")
                    {
                        <section>
                            <div class="div1">
                                <!-- Naam links -->
                                <label id="name" class="name-label">
                                    @HttpContextAccessor.HttpContext.Session.GetString("name")
                                </label>

                                <!-- Avatar + Knop in een container rechts -->
                                <div class="profile-container">
                                    @if (HttpContextAccessor.HttpContext.Session.GetString("profilepicture") != null)
                                    {
                                        <img src="@Url.Content(HttpContextAccessor.HttpContext.Session.GetString("profilepicture"))" alt="Avatar" class="avatar" />
                                    }
                                    else
                                    {
                                        <img src="/ProfilePictures/default-avatar.png" alt="Avatar" class="avatar" />
                                    }

                                    <!-- Form to upload new profile picture -->
                                    <form method="post" asp-action="UpdateProfilePicture" asp-controller="Home" enctype="multipart/form-data">
                                        <input type="file" name="profilePicture" accept="image/*" class="form-control" required />
                                        <input type="submit" name="action" value="Change picture" class="btn btn-primary small-btn" />
                                    </form>
                                </div>
                            </div>
                        </section>
                    }
                }
            </section>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - UC3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
